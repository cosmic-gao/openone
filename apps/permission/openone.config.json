{
    "appId": "permission",
    "appName": "权限管理",
    "version": "1.0.0",
    "menus": [
        {
            "key": "permission-list",
            "label": "权限定义",
            "icon": "Shield",
            "path": "/"
        },
        {
            "key": "role-list",
            "label": "角色管理",
            "icon": "Users",
            "path": "/roles"
        }
